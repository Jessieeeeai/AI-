# 开发环境配置 (CPU模拟模式)
PORT=3001
NODE_ENV=development

# JWT密钥
JWT_SECRET=videoai-pro-secret-key-change-in-production-2024

# Stripe密钥
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here

# 前端URL
CLIENT_URL=http://localhost:5173

# ========================================
# AI服务配置 - CPU开发模式
# ========================================

# 启用Mock模式 (不需要真实GPU服务)
USE_MOCK_AI_SERVICES=true

# Mock服务端口
MOCK_INDEXTTS2_PORT=5000
MOCK_COMFYUI_PORT=8188

# IndexTTS2 配置
INDEXTTS2_API_URL=http://localhost:5000
INDEXTTS2_TIMEOUT=30000

# ComfyUI 配置
COMFYUI_API_URL=http://localhost:8188
COMFYUI_TIMEOUT=60000

# 文本优化服务 (使用免费API测试)
# 选项: openai, zhipu, local-mock
TEXT_OPTIMIZATION_PROVIDER=local-mock
OPENAI_API_KEY=your_openai_key_here
ZHIPU_API_KEY=your_zhipu_key_here

# 文件存储
UPLOAD_DIR=./uploads
VIDEO_OUTPUT_DIR=./outputs/videos
AUDIO_OUTPUT_DIR=./outputs/audios

# 日志级别
LOG_LEVEL=debug
