# 服务器配置
PORT=3001
NODE_ENV=development

# JWT密钥
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Stripe密钥
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# 加密货币支付（NOWPayments）
NOWPAYMENTS_API_KEY=your_nowpayments_api_key
NOWPAYMENTS_IPN_SECRET=your_ipn_secret

# 阿里云OSS配置
ALIYUN_ACCESS_KEY_ID=your_access_key_id
ALIYUN_ACCESS_KEY_SECRET=your_access_key_secret
ALIYUN_OSS_BUCKET=your_bucket_name
ALIYUN_OSS_REGION=oss-cn-hangzhou

# ========================================
# 视频生成服务配置 (必需)
# ========================================

# IndexTTS2 HTTP API 地址 (TTS 音频生成)
# 本地开发: http://localhost:5000
# GPU 服务器: http://your-gpu-server-ip:5000
INDEXTTS2_API_URL=http://localhost:5000

# ComfyUI API 地址 (视频生成 - Wan2.1 + InfiniteTalk)
# 本地开发: http://localhost:8188
# GPU 服务器: http://your-gpu-server-ip:8188
COMFYUI_API_URL=http://localhost:8188

# API 密钥 (如果需要认证,可选)
# INDEXTTS2_API_KEY=your_api_key
# COMFYUI_API_KEY=your_api_key

# 邮件配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# 前端URL
CLIENT_URL=http://localhost:5173
